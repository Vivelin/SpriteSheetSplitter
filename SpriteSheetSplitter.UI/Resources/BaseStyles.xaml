<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
	<Style x:Key="ControlBase" TargetType="Control">
		<Setter Property="Margin" Value="3" />
	</Style>

	<Style x:Key="PanelBase" TargetType="StackPanel">
		<Setter Property="Margin" Value="3" />
	</Style>
	
	<Style x:Key="GridBase" TargetType="Grid">
		<Setter Property="Margin" Value="3" />
	</Style>

	<Style TargetType="Label" BasedOn="{StaticResource ControlBase}">
		<Setter Property="Padding" Value="0" />
		<Setter Property="Margin" Value="3,6,3,0" />
	</Style>
	
	<Style TargetType="Button" BasedOn="{StaticResource ControlBase}">
		<Setter Property="Margin" Value="3" />
		<Setter Property="MinHeight" Value="21" />
		<Setter Property="MinWidth" Value="73" />
	</Style>
	
	<Style TargetType="xctk:IntegerUpDown" BasedOn="{StaticResource ControlBase}" />
	<Style TargetType="xctk:SingleUpDown" BasedOn="{StaticResource ControlBase}" />
	<Style TargetType="xctk:ColorPicker" BasedOn="{StaticResource ControlBase}" />
</ResourceDictionary>